t->Get(h3.c_str());  TH2D *hist4 = (TH2D*)input->Get(h4.c_str());  cmap(hist3,hist4,output,"Plots/vertical_vs_radial.png");    output->Write();  output->Close();  input->Close();  cout << "\nCreated: " << outputFname << endl;  return 0;}
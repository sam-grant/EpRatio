#include "TStyle.h"
#include "TLegend.h"
#include "TDirectory.h"

using namespace std;

void fitGauss(TH1D *hist, string title, string fname, TFile *output) {
  TH2D *hist_2D;// = (TH1D*)hist->Clone("hist_clone");
  double x, y;
  for (int xtal = 0; xtal < 54; xtal++) {
    x = xtal+1;
    y = hist->GetBinContent(xtal+1);
    hist_2D -> SetBinContent()
  }
  TF1 *gFunc = new TF1("gFunc", "gaus");
  TH1D *projY = hist_clone->Projection("prY");
  gFunc->SetLineColor(kRed);
  gFunc->SetLineWidth(2);
  projY->Fit(gFunc,"M");
  // Format and draw
  TCanvas *c = new TCanvas();
  projY->Draw();
  c->SaveAs(fname.c_str());
  delete c;
  projY->SetDirectory(output);
  return; 
}

